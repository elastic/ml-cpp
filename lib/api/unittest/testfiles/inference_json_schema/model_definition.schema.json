{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://raw.githubusercontent.com/elastic/ml-json-schemas/master/schemas/model_definition.schema.json",
  "title": "definition",
  "description": "Technical details required for model evaluation.",
  "definitions": {
    "numeric_relationship": {
      "$id": "#numeric_relationship",
      "type": "string",
      "enum": [
        "lt",
        "lte",
        "gt",
        "gte"
      ]
    },
    "basic_evaluator": {
      "type": "object",
      "$id": "#basic_evaluator",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        }
      },
      "additionalProperties": false
    },
    "tree_node": {
      "$id": "#tree_node",
      "type": "object",
      "properties": {
        "node_index": {
          "type": "integer"
        },
        "split_feature": {
          "type": "integer"
        },
        "split_gain": {
          "type": "number"
        },
        "threshold": {
          "type": "number"
        },
        "decision_type": {
          "$ref": "#/definitions/numeric_relationship"
        },
        "default_left": {
          "type": "boolean"
        },
        "left_child": {
          "type": "integer"
        },
        "right_child": {
          "type": "integer"
        }
      },
      "required": [
        "node_index",
        "split_feature",
        "threshold",
        "decision_type",
        "default_left",
        "left_child",
        "right_child"
      ],
      "additionalProperties": false
    },
    "tree_leaf": {
      "$id": "#tree_leaf",
      "type": "object",
      "properties": {
        "node_index": {
          "type": "integer"
        },
        "leaf_value": {
          "type": "number"
        }
      },
      "required": [
        "node_index",
        "leaf_value"
      ],
      "additionalProperties": false
    },
    "tree": {
      "$id": "#tree",
      "description": "Technical specification for an decision tree model definition.",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tree_structure": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/tree_node"
              },
              {
                "$ref": "#/definitions/tree_leaf"
              }
            ]
          }
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        }
      },
      "required": [
        "tree_structure",
        "feature_names",
        "target_type"
      ]
    },
    "ensemble": {
      "$id": "#ensemble",
      "description": "Technical specification for an ensemble model definition.",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "trained_models": {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "properties": {
                  "ensemble": {
                    "$ref": "#/definitions/ensemble"
                  }
                },
                "required": [
                  "ensemble"
                ],
                "additionalProperties": false
              },
              {
                "properties": {
                  "tree": {
                    "$ref": "#/definitions/tree"
                  }
                },
                "required": [
                  "tree"
                ],
                "additionalProperties": false
              }
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "classification_weights": {
          "items": {
            "type": "number"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        },
        "aggregate_output": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "weighted_sum": {
                  "type": "object",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "weighted_sum"
              ]
            },
            {
              "type": "object",
              "properties": {
                "weighted_mode": {
                  "type": "object",
                  "description": "Allows to used (weighted) majority vote for classification.",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "weighted_mode"
              ]
            },
            {
              "type": "object",
              "properties": {
                "logistic_regression": {
                  "type": "object",
                  "description": "Given a weights vector $\\vec{w}$ as a parameter and an output vector from the ensemble $\\vec{x}$, it computes the logistic regression function $1/(1 + \\exp(-\\vec{w}^T \\vec{x}))$.",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "logistic_regression"
              ]
            }
          ]
        }
      },
      "required": [
        "feature_names",
        "trained_models",
        "target_type",
        "aggregate_output"
      ],
      "additionalProperties": false
    },
    "one_hot_encoding": {
      "description": "Applies one-hot encoding to a specified set of categories for a single categorical field.",
      "type": "object",
      "properties": {
        "field": {
          "description": "Input field name. Must be defined in the input section.",
          "type": "string"
        },
        "hot_map": {
          "type": "object",
          "description": "Map from the categories of the original field to the binary feature names referenced by the model.",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "field",
        "hot_map"
      ]
    },
    "target_mean_encoding": {
      "description": "Applies target encoding to a categorical field.",
      "type": "object",
      "properties": {
        "field": {
          "description": "Input field name",
          "type": "string"
        },
        "feature_name": {
          "description": "Name of this target feature referenced by the model.",
          "type": "string"
        },
        "target_map": {
          "type": "object",
          "description": "Map from the categories to the target values.",
          "additionalProperties": {
            "type": "number"
          }
        },
        "default_value": {
          "description": "Value for categories that have not been seen before",
          "type": "number"
        }
      },
      "required": [
        "field",
        "feature_name",
        "target_map",
        "default_value"
      ]
    },
    "frequency_encoding": {
      "description": "Applies frequency encoding to a categorical field.",
      "type": "object",
      "properties": {
        "field": {
          "description": "Input field name",
          "type": "string"
        },
        "feature_name": {
          "description": "Name of this frequency feature referenced by the model.",
          "type": "string"
        },
        "frequency_map": {
          "type": "object",
          "description": "Map from the category names to the frequency values.",
          "additionalProperties": {
            "type": "number"
          }
        }
      },
      "required": [
        "field",
        "feature_name",
        "frequency_map"
      ]
    }
  },
  "type": "object",
  "properties": {
    "preprocessors": {
      "description": "Optional step for pre-processing data, e.g. vector embedding, one-hot-encoding, etc.",
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "one_hot_encoding": {
                "$ref": "#/definitions/one_hot_encoding"
              }
            },
            "required": [
              "one_hot_encoding"
            ],
            "additionalProperties": false
          },
          {
            "properties": {
              "target_mean_encoding": {
                "$ref": "#/definitions/target_mean_encoding"
              }
            },
            "required": [
              "target_mean_encoding"
            ],
            "additionalProperties": false
          },
          {
            "properties": {
              "frequency_encoding": {
                "$ref": "#/definitions/frequency_encoding"
              }
            },
            "required": [
              "frequency_encoding"
            ],
            "additionalProperties": false
          }
        ]
      },
      "minItems": 0,
      "uniqueItems": true
    },
    "trained_model": {
      "description": "Details of the model evaluation step with a trained_model.",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "ensemble": {
              "$ref": "#/definitions/ensemble"
            }
          },
          "required": [
            "ensemble"
          ],
          "additionalProperties": false
        },
        {
          "properties": {
            "tree": {
              "$ref": "#/definitions/tree"
            }
          },
          "required": [
            "tree"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "input",
    "trained_model"
  ],
  "additionalProperties": false
}
