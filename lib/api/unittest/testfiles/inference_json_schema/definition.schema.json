{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://raw.githubusercontent.com/elastic/ml_json_schemas/master/schemas/definition.schema.combined.json",
  "title": "definition",
  "description": "Technical details required for model evaluation.",
  "definitions": {
    "numeric_relationship": {
      "$id": "#numeric_relationship",
      "type": "string",
      "enum": [
        "lt",
        "lte",
        "gt",
        "gte"
      ]
    },
    "basic_evaluator": {
      "type": "object",
      "$id": "#basic_evaluator",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        }
      },
      "additionalProperties": false
    },
    "tree_node": {
      "$id": "#tree_node",
      "type": "object",
      "properties": {
        "node_index": {
          "type": "integer"
        },
        "split_feature": {
          "type": "integer"
        },
        "split_gain": {
          "type": "number"
        },
        "threshold": {
          "type": "number"
        },
        "decision_type": {
          "$ref": "#/definitions/numeric_relationship"
        },
        "default_left": {
          "type": "boolean"
        },
        "left_child": {
          "type": "integer"
        },
        "right_child": {
          "type": "integer"
        }
      },
      "required": [
        "node_index",
        "split_feature",
        "threshold",
        "decision_type",
        "default_left",
        "left_child",
        "right_child"
      ],
      "additionalProperties": false
    },
    "tree_leaf": {
      "$id": "#tree_leaf",
      "type": "object",
      "properties": {
        "node_index": {
          "type": "integer"
        },
        "leaf_value": {
          "type": "number"
        }
      },
      "required": [
        "node_index",
        "leaf_value"
      ],
      "additionalProperties": false
    },
    "tree": {
      "$id": "#tree",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tree_structure": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/tree_node"
              },
              {
                "$ref": "#/definitions/tree_leaf"
              }
            ]
          }
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        }
      },
      "required": [
        "tree_structure",
        "feature_names",
        "target_type"
      ]
    },
    "ensemble": {
      "$id": "#ensemble",
      "properties": {
        "feature_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "trained_models": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tree": {
                "$ref": "#/definitions/tree"
              }
            },
            "required": [
              "tree"
            ],
            "additionalProperties": false
          }
        },
        "classification_labels": {
          "items": {
            "type": "string"
          }
        },
        "target_type": {
          "type": "string",
          "enum": [
            "classification",
            "regression"
          ]
        },
        "aggregate_output": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "weighted_sum": {
                  "type": "object",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "weighted_sum"
              ]
            },
            {
              "type": "object",
              "properties": {
                "weighted_mode": {
                  "type": "object",
                  "description": "Allows to used (weighted) majority vote for classification.",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "weighted_mode"
              ]
            },
            {
              "type": "object",
              "properties": {
                "logistic_regression": {
                  "type": "object",
                  "description": "Given a weights vector $\\vec{w}$ as a parameter and an output vector from the ensemble $\\vec{x}$, it computes the logistic regression function $1/(1 + \\exp(-\\vec{w}^T \\vec{x}))$.",
                  "properties": {
                    "weights": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  },
                  "required": [
                    "weights"
                  ]
                }
              },
              "required": [
                "logistic_regression"
              ]
            }
          ]
        }
      },
      "required": [
        "feature_names",
        "trained_models",
        "target_type",
        "aggregate_output"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "input": {
      "description": "Information related to the input.",
      "type": "object",
      "properties": {
        "field_names": {
          "description": "List of the field names.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "additionalItems": false
    },
    "preprocessors": {
      "description": "Optional step for pre-processing data, e.g. vector embedding, one-hot-encoding, etc.",
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "one_hot_encoding": {
                "description": "Application of the one-hot encoding function on a single column.",
                "type": "object",
                "properties": {
                  "field": {
                    "description": "Input field name. Must be defined in the input section.",
                    "type": "string"
                  },
                  "hot_map": {
                    "type": "object",
                    "description": "Map from the category names of the original field to the new field names.",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "field",
                  "hot_map"
                ]
              }
            },
            "required": [
              "one_hot_encoding"
            ]
          },
          {
            "type": "object",
            "properties": {
              "target_mean_encoding": {
                "description": "Mapping from categorical columns to numerical values related to the target value",
                "type": "object",
                "properties": {
                  "field": {
                    "description": "Input field name",
                    "type": "string"
                  },
                  "feature_name": {
                    "description": "Feature name after pre-processing",
                    "type": "string"
                  },
                  "target_map": {
                    "type": "object",
                    "description": "Map from the category names to the target values.",
                    "additionalProperties": {
                      "type": "number"
                    }
                  },
                  "default_value": {
                    "description": "Value for categories that have not been seen before",
                    "type": "number"
                  }
                },
                "required": [
                  "field",
                  "feature_name",
                  "target_map",
                  "default_value"
                ]
              }
            },
            "required": [
              "target_mean_encoding"
            ]
          },
          {
            "type": "object",
            "properties": {
              "frequency_encoding": {
                "description": "Mapping from categorical columns to numerical values related to categorical value distribution",
                "type": "object",
                "properties": {
                  "field": {
                    "description": "Input field name",
                    "type": "string"
                  },
                  "feature_name": {
                    "description": "Feature name after pre-processing",
                    "type": "string"
                  },
                  "frequency_map": {
                    "type": "object",
                    "description": "Map from the category names to the frequency values.",
                    "additionalProperties": {
                      "type": "number"
                    }
                  }
                },
                "required": [
                  "field",
                  "feature_name",
                  "frequency_map"
                ]
              }
            },
            "required": [
              "frequency_encoding"
            ]
          }
        ]
      },
      "minItems": 0,
      "uniqueItems": true
    },
    "trained_model": {
      "description": "Details of the model evaluation step with a trained_model.",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "ensemble": {
              "$ref": "#/definitions/ensemble"
            }
          },
          "required": [
            "ensemble"
          ],
          "additionalProperties": false
        },
        {
          "properties": {
            "tree": {
              "$ref": "#/definitions/tree"
            }
          },
          "required": [
            "tree"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "input",
    "trained_model"
  ],
  "additionalProperties": false
}
